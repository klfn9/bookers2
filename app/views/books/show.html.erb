<main>
  <p id="notice">
      <%= notice %>
    </p>
    
  <div class="container">
    
    <div class="row">
      <div class="col-md-3">

        
            
            <%= render 'users/userinfo', user: @user %>
	          <%= render 'books/newbook', book: @book_new %>
	            
      </div>

      <div class="col-md-8 offset-md-1">

        <h2>Book detail</h2>

        <table class="table">

          <tbody>
           

            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                <p><%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @user.name %></p>
                <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @user.id == current_user.id %>
                <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %>
                <% end %>
                </td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger btn-sm" %>
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>